<!-- cfb-rankings.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CFB Rankings - Custom College Football Rankings</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
            padding: 40px 20px;
        }

        .header h1 {
            font-size: 3em;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .header p {
            font-size: 1.2em;
            opacity: 0.9;
        }

        .controls {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .control-group {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .control-item {
            display: flex;
            flex-direction: column;
        }

        .control-item label {
            font-weight: 600;
            margin-bottom: 8px;
            color: #333;
            font-size: 0.9em;
        }

        .control-item select,
        .control-item input {
            padding: 10px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 1em;
            transition: border-color 0.3s;
        }

        .control-item select:focus,
        .control-item input:focus {
            outline: none;
            border-color: #667eea;
        }

        .formula-params {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 2px solid #e0e0e0;
        }

        .formula-params h3 {
            margin-bottom: 15px;
            color: #333;
        }

        .param-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
        }

        .param-item {
            display: flex;
            flex-direction: column;
        }

        .param-item label {
            font-size: 0.85em;
            color: #666;
            margin-bottom: 5px;
        }

        .param-item input {
            padding: 8px;
            border: 2px solid #e0e0e0;
            border-radius: 6px;
        }

        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        button {
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            flex: 1;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            background: #f0f0f0;
            color: #333;
        }

        .btn-secondary:hover {
            background: #e0e0e0;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: white;
            font-size: 1.2em;
        }

        .rankings {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .rankings-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .rankings-header h2 {
            font-size: 1.5em;
        }

        .rankings-info {
            font-size: 0.9em;
            opacity: 0.9;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: #f8f9fa;
        }

        th {
            padding: 15px;
            text-align: left;
            font-weight: 600;
            color: #333;
            border-bottom: 2px solid #e0e0e0;
        }

        th.rank { width: 60px; text-align: center; }
        th.record { width: 100px; text-align: center; }
        th.rating { width: 100px; text-align: right; }

        tbody tr {
            border-bottom: 1px solid #f0f0f0;
            transition: background 0.2s;
        }

        tbody tr:hover {
            background: #f8f9fa;
        }

        td {
            padding: 15px;
        }

        td.rank {
            text-align: center;
            font-weight: 700;
            color: #667eea;
            font-size: 1.1em;
        }

        td.team {
            font-weight: 600;
            color: #333;
        }

        td.record {
            text-align: center;
            color: #666;
        }

        td.rating {
            text-align: right;
            font-weight: 600;
            color: #764ba2;
        }

        .top-3 {
            background: #fff9e6;
        }

        .error {
            background: #fff0f0;
            color: #d32f2f;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
            border-left: 4px solid #d32f2f;
        }

        .info {
            background: #e3f2fd;
            color: #1976d2;
            padding: 15px;
            border-radius: 8px;
            margin: 20px 0;
            border-left: 4px solid #1976d2;
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 2em;
            }

            .control-group {
                grid-template-columns: 1fr;
            }

            .param-grid {
                grid-template-columns: 1fr;
            }

            .button-group {
                flex-direction: column;
            }

            table {
                font-size: 0.9em;
            }

            th, td {
                padding: 10px 8px;
            }
        }

        .spinner {
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top: 3px solid white;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üèà CFB Rankings</h1>
            <p>Custom College Football Team Rankings</p>
        </div>

        <div class="controls">
            <div class="control-group">
                <div class="control-item">
                    <label for="year">Season</label>
                    <select id="year">
                        <option value="2024" selected>2024</option>
                        <option value="2023">2023</option>
                        <option value="2022">2022</option>
                        <option value="2021">2021</option>
                        <option value="2020">2020</option>
                    </select>
                </div>

                <div class="control-item">
                    <label for="seasonType">Season Type</label>
                    <select id="seasonType">
                        <option value="regular" selected>Regular Season</option>
                        <option value="postseason">Postseason</option>
                    </select>
                </div>

                <div class="control-item">
                    <label for="week">Week (Optional)</label>
                    <input type="number" id="week" min="1" max="15" placeholder="All weeks">
                </div>

                <div class="control-item">
                    <label for="topN">Show Top N</label>
                    <input type="number" id="topN" min="1" max="133" value="25" placeholder="25">
                </div>
            </div>

            <div class="formula-params">
                <h3>‚öôÔ∏è Formula Parameters</h3>
                <div class="param-grid">
                    <div class="param-item">
                        <label>Win/Loss (1.0)</label>
                        <input type="number" id="winLoss" step="0.1" value="1.0">
                    </div>
                    <div class="param-item">
                        <label>1-Score (1.0)</label>
                        <input type="number" id="oneScore" step="0.1" value="1.0">
                    </div>
                    <div class="param-item">
                        <label>2-Score (1.3)</label>
                        <input type="number" id="twoScore" step="0.1" value="1.3">
                    </div>
                    <div class="param-item">
                        <label>3+ Score (1.5)</label>
                        <input type="number" id="threeScore" step="0.1" value="1.5">
                    </div>
                    <div class="param-item">
                        <label>SoS (1.0)</label>
                        <input type="number" id="sos" step="0.1" value="1.0">
                    </div>
                </div>
            </div>

            <div class="button-group">
                <button class="btn-primary" onclick="loadRankings()">
                    Calculate Rankings
                </button>
                <button class="btn-secondary" onclick="resetParams()">
                    Reset to Defaults
                </button>
            </div>
        </div>

        <div id="results"></div>
    </div>

    <script>
        const API_BASE = window.location.origin;

        async function loadRankings() {
            const year = document.getElementById('year').value;
            const seasonType = document.getElementById('seasonType').value;
            const week = document.getElementById('week').value;
            const topN = document.getElementById('topN').value;
            
            const winLoss = document.getElementById('winLoss').value;
            const oneScore = document.getElementById('oneScore').value;
            const twoScore = document.getElementById('twoScore').value;
            const threeScore = document.getElementById('threeScore').value;
            const sos = document.getElementById('sos').value;

            // Build URL
            let url = `${API_BASE}/rankings?year=${year}&season_type=${seasonType}`;
            if (week) url += `&week=${week}`;
            if (topN) url += `&top_n=${topN}`;
            
            url += `&win_loss_multiplier=${winLoss}`;
            url += `&one_score_multiplier=${oneScore}`;
            url += `&two_score_multiplier=${twoScore}`;
            url += `&three_score_multiplier=${threeScore}`;
            url += `&strength_of_schedule_multiplier=${sos}`;

            // Show loading
            document.getElementById('results').innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Calculating rankings...</p>
                </div>
            `;

            try {
                const response = await fetch(url);
                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.detail || 'Failed to load rankings');
                }

                displayRankings(data);
            } catch (error) {
                document.getElementById('results').innerHTML = `
                    <div class="error">
                        <strong>Error:</strong> ${error.message}
                        <br><br>
                        <small>Make sure the database has been initialized and contains game data for the selected season.</small>
                    </div>
                `;
            }
        }

        function displayRankings(data) {
            const weekText = data.week ? ` - Week ${data.week}` : ' - Full Season';
            
            let html = `
                <div class="rankings">
                    <div class="rankings-header">
                        <h2>${data.year} ${data.season_type.charAt(0).toUpperCase() + data.season_type.slice(1)}${weekText}</h2>
                        <div class="rankings-info">
                            ${data.teams.length} of ${data.total_teams} teams
                        </div>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th class="rank">Rank</th>
                                <th class="team">Team</th>
                                <th class="record">Record</th>
                                <th class="rating">Rating</th>
                            </tr>
                        </thead>
                        <tbody>
            `;

            data.teams.forEach((team, index) => {
                const rowClass = index < 3 ? 'top-3' : '';
                html += `
                    <tr class="${rowClass}">
                        <td class="rank">${index + 1}</td>
                        <td class="team">${team.name}</td>
                        <td class="record">${team.wins}-${team.losses}</td>
                        <td class="rating">${team.ranking.toFixed(2)}</td>
                    </tr>
                `;
            });

            html += `
                        </tbody>
                    </table>
                </div>
            `;

            document.getElementById('results').innerHTML = html;
        }

        function resetParams() {
            document.getElementById('winLoss').value = '1.0';
            document.getElementById('oneScore').value = '1.0';
            document.getElementById('twoScore').value = '1.3';
            document.getElementById('threeScore').value = '1.5';
            document.getElementById('sos').value = '1.0';
        }

        // Load rankings on page load
        window.addEventListener('load', () => {
            // Show info message if no data yet
            document.getElementById('results').innerHTML = `
                <div class="info">
                    <strong>Welcome!</strong> Click "Calculate Rankings" to view the latest college football rankings.
                    <br><br>
                    <small>Need data? Visit <a href="${API_BASE}/docs" style="color: #1976d2; font-weight: bold;">${API_BASE}/docs</a> to sync data via the /admin/sync endpoint.</small>
                </div>
            `;
        });
    </script>
</body>
</html>